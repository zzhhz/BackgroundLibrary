<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".Main2Activity"
        tools:ignore="MissingPrefix,HardcodedText">

        <CheckBox
            android:id="@+id/cb_baby_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:button="@null"
            android:padding="5dp"
            android:text="这是一个测试按理"
            app:bl_checked_solid_color="#61c375"
            app:bl_checked_stroke_color="#ff0000"
            app:bl_checked_textColor="#FFFFFF"
            app:bl_corners_radius="10dp"
            app:bl_stroke_width="1dp"
            app:bl_unChecked_solid_color="@android:color/white"
            app:bl_unChecked_stroke_color="#999999"
            app:bl_unChecked_textColor="#111111" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:button="@null"
                android:gravity="center"
                android:text="按钮1"
                app:bl_checked_solid_color="#61c375"
                app:bl_checked_stroke_color="@android:color/white"
                app:bl_checked_textColor="#FFFFFF"
                app:bl_corners_radius="10dp"
                app:bl_stroke_width="1dp"
                app:bl_unChecked_solid_color="@android:color/white"
                app:bl_unChecked_stroke_color="#98fb98"
                app:bl_unChecked_textColor="#111111" />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:button="@null"
                android:text="按钮1"
                app:bl_checked_solid_color="#61c375"
                app:bl_checked_stroke_color="@android:color/white"
                app:bl_corners_radius="10dp"
                app:bl_stroke_width="1dp"
                app:bl_unChecked_solid_color="@android:color/white"
                app:bl_unChecked_stroke_color="#98fb98" />
        </RadioGroup>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>